# ============================================
# TaKeKe Backend 开发环境配置
# ============================================

# ============================================
# 基础环境配置
# ============================================
ENVIRONMENT=development
DEBUG=true

# ============================================
# 数据库配置
# ============================================
DATABASE_URL=sqlite:///./tatake.db
CHAT_DB_PATH=data/chat.db
CHAT_ECHO_SQL=true

# ============================================
# 认证微服务配置
# ============================================
AUTH_MICROSERVICE_URL=http://localhost:8987
AUTH_PROJECT=tatake_backend

# ============================================
# JWT 配置（开发环境）
# ============================================
JWT_SECRET_KEY=dev-secret-key-for-tatake-backend-2024
JWT_ALGORITHM=HS256

# 开发环境跳过签名验证
JWT_SKIP_SIGNATURE=true
JWT_FALLBACK_SKIP_SIGNATURE=true

# ============================================
# API 配置
# ============================================
API_BASE_URL=http://localhost:8001

# ============================================
# AI/LLM 配置（开发环境）
# ============================================
OPENAI_API_KEY=
OPENAI_BASE_URL=https://api.openai.com/v1
OPENAI_MODEL=gpt-3.5-turbo
OPENAI_TEMPERATURE=0.7

# ============================================
# 游戏化系统配置（开发环境）
# ============================================
NORMAL_TASK_POINTS=10
TOP3_COST_POINTS=50
TOP3_LOTTERY_POINTS_PROBABILITY=0.1
TOP3_LOTTERY_POINTS_AMOUNT=100
TOP3_LOTTERY_REWARD_PROBABILITY=0.05

# ============================================
# 日志配置
# ============================================
LOG_LEVEL=DEBUG