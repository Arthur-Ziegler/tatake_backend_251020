# ============================================
# TaKeKe Backend 环境配置模板
# ============================================
# 复制此文件为 .env 并填入实际配置值

# ============================================
# 基础环境配置
# ============================================
# 环境类型 (development|production)
ENVIRONMENT=development

# 调试模式 (true|false)
DEBUG=false

# ============================================
# 数据库配置
# ============================================
# 主数据库连接
DATABASE_URL=sqlite:///./tatake.db

# 认证数据库连接（已废弃，保留向后兼容）
AUTH_DATABASE_URL=sqlite:///./data/auth.db

# 聊天系统数据库
CHAT_DB_PATH=data/chat.db
CHAT_ECHO_SQL=false

# ============================================
# 认证微服务配置
# ============================================
# 认证微服务地址
AUTH_MICROSERVICE_URL=http://localhost:8987

# 认证项目标识
AUTH_PROJECT=tatake_backend

# ============================================
# JWT 配置
# ============================================
# JWT 密钥（生产环境请使用强密钥）
JWT_SECRET_KEY=your-super-secret-jwt-key-for-tatake-backend-2024

# JWT 算法
JWT_ALGORITHM=HS256

# 开发环境跳过签名验证（仅开发环境）
JWT_SKIP_SIGNATURE=false

# 开发环境回退跳过签名（仅开发环境）
JWT_FALLBACK_SKIP_SIGNATURE=false

# ============================================
# API 配置
# ============================================
# API 基础地址
API_BASE_URL=http://localhost:8001

# ============================================
# AI/LLM 配置
# ============================================
# OpenAI API 配置
OPENAI_API_KEY=
OPENAI_BASE_URL=https://api.openai.com/v1
OPENAI_MODEL=gpt-3.5-turbo
OPENAI_TEMPERATURE=0.7

# 通用 LLM 配置（兼容性）
LLM_API_KEY=
LLM_BASE_URL=https://api.openai.com/v1
LLM_MODEL=gpt-3.5-turbo
LLM_TEMPERATURE=0.7

# ============================================
# 游戏化系统配置
# ============================================
# 积分系统配置
NORMAL_TASK_POINTS=10
TOP3_COST_POINTS=50
TOP3_LOTTERY_POINTS_PROBABILITY=0.1
TOP3_LOTTERY_POINTS_AMOUNT=100
TOP3_LOTTERY_REWARD_PROBABILITY=0.05

# ============================================
# 日志配置
# ============================================
# 日志级别 (DEBUG|INFO|WARNING|ERROR)
LOG_LEVEL=INFO