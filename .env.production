# ============================================
# TaKeKe Backend 生产环境配置
# ============================================

# ============================================
# 基础环境配置
# ============================================
ENVIRONMENT=production
DEBUG=false

# ============================================
# 数据库配置
# ============================================
DATABASE_URL=sqlite:///./tatake.db
CHAT_DB_PATH=data/chat.db
CHAT_ECHO_SQL=false

# ============================================
# 认证微服务配置
# ============================================
AUTH_MICROSERVICE_URL=http://localhost:8987
AUTH_PROJECT=tatake_backend

# ============================================
# JWT 配置（生产环境）
# ============================================
# 生产环境请使用强密钥，建议使用 openssl rand -hex 32 生成
JWT_SECRET_KEY=CHANGE-ME-IN-PRODUCTION-SUPER-SECRET-KEY
JWT_ALGORITHM=HS256

# 生产环境必须验证签名
JWT_SKIP_SIGNATURE=false
JWT_FALLBACK_SKIP_SIGNATURE=false

# ============================================
# API 配置
# ============================================
API_HOST=0.0.0.0
API_PORT=8001

# ============================================
# 微服务配置（生产环境）
# ============================================
# Task微服务配置
TASK_SERVICE_URL=http://127.0.0.1:20252/api/v1
TASK_SERVICE_TIMEOUT=30

# 聊天微服务配置（生产环境需要配置实际URL）
CHAT_SERVICE_URL=http://45.152.65.130:20252
CHAT_SERVICE_TIMEOUT=30

# ============================================
# AI/LLM 配置（生产环境）
# ============================================
OPENAI_API_KEY=
OPENAI_BASE_URL=https://api.openai.com/v1
OPENAI_MODEL=gpt-3.5-turbo
OPENAI_TEMPERATURE=0.7

# ============================================
# 游戏化系统配置（生产环境）
# ============================================
NORMAL_TASK_POINTS=10
TOP3_COST_POINTS=50
TOP3_LOTTERY_POINTS_PROBABILITY=0.1
TOP3_LOTTERY_POINTS_AMOUNT=100
TOP3_LOTTERY_REWARD_PROBABILITY=0.05

# ============================================
# 日志配置
# ============================================
LOG_LEVEL=INFO
